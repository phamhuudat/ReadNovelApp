    <x:String x:Key="IconDownload">&#xf019;</x:String>

    <x:String x:Key="IconCirclePlus">&#xf055;</x:String>

    <x:String x:Key="IconPen">&#xf304;</x:String>
    <x:String x:Key="IconLock">&#xf023;</x:String>

    <x:String x:Key="IconCircleQuestion">&#xf059;</x:String>
    <x:String x:Key="IconFileLines">&#xf0f6;</x:String>
    <x:String x:Key="IconClipboardList">&#xf46d;</x:String>
    <x:String x:Key="IconArrowDownShortWide">&#xf884;</x:String>
    <x:String x:Key="IconArrowDownWideShort">&#xf160;</x:String>
    <x:String x:Key="IconCircleArrowLeft">&#xf0a8;</x:String>
    <x:String x:Key="IconArrowLeft">&#x2190;</x:String>
    <x:String x:Key="IconComment">&#xf075;</x:String>
    <x:String x:Key="IconThumbsUp">&#xf087;</x:String>
    <x:String x:Key="IconLibrary">&#xf56c;</x:String>
    <x:String x:Key="IconExplorer">&#xf5fd;</x:String>
    <x:String x:Key="IconUser">&#xf406;</x:String>
    <DataTemplate x:Key="BookView">
        <ViewCell>
            <Grid ColumnDefinitions="60,*,30">
                <Frame Padding="0" CornerRadius="6">
                    <ffimageloading:CachedImage
                        Grid.Column="0"
                        Aspect="AspectFill"
                        BackgroundColor="Blue"
                        Source="{Binding PathImage}" />
                </Frame>
                <StackLayout
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Orientation="Vertical"
                    Spacing="5"
                    VerticalOptions="Center">
                    <Label
                        FontSize="{StaticResource TextNormalSize}"
                        Text="{Binding Name}"
                        TextColor="{DynamicResource HomeTextTitleBookColor}" />
                    <Label
                        FontSize="{StaticResource TextSmallSize}"
                        Text="{Binding Author}"
                        TextColor="{StaticResource GrayColor}" />
                    <Grid ColumnDefinitions="Auto,100">
                        <StackLayout
                            Grid.Column="0"
                            Orientation="Horizontal"
                            WidthRequest="100">
                            <ffimageloading:CachedImage
                                Aspect="AspectFit"
                                Scale="1.4"
                                Source="resource://NovelApp.Resources.icons.ic_views.png" />
                            <Label
                                Margin="0,0,20,0"
                                FontSize="{StaticResource TextSmallSize}"
                                Text="{Binding Views, StringFormat='{0} Chs'}"
                                TextColor="{DynamicResource HomeTextTitleBookColor}" />
                            <StackLayout.Triggers>
                                <DataTrigger
                                    Binding="{Binding Views}"
                                    TargetType="StackLayout"
                                    Value="0">
                                    <Setter Property="IsVisible" Value="False" />
                                </DataTrigger>
                            </StackLayout.Triggers>
                        </StackLayout>
                    </Grid>
                </StackLayout>
                <StackLayout Grid.Column="2">
                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        HorizontalOptions="EndAndExpand"
                        Text="..."
                        TextColor="{DynamicResource HomeBlueColor}"
                        VerticalOptions="CenterAndExpand" />
                </StackLayout>

            </Grid>
        </ViewCell>
    </DataTemplate>
</ResourceDictionary>