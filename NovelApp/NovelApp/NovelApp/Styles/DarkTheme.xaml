    <Color x:Key="GrayTextColor">#828388</Color>
    <Color x:Key="OrangeTextColor">#e4d197</Color>
    <Color x:Key="BlackTextColor">#0d1021</Color>
    <Color x:Key="BookDetailBgUnCheckBtntColor">#1B1B25</Color>
    <Color x:Key="BookDetailBgCheckBtntColor">#6a8efe</Color>
    <!--  HomePage  -->
    <Color x:Key="HomeSearchBarBgColor">#1b1b25</Color>
    <Color x:Key="HomeSearchBarColor">#253583</Color>
    <Color x:Key="HomeSelectionIndicatorColor">White</Color>
    <Color x:Key="HomeTextTitleBookColor">White</Color>
    <Color x:Key="HomeThemeBgColor">#0e0d13</Color>
    <Color x:Key="HomeBlueColor">#253583</Color>
    <!--  BookDetail  -->
    <Color x:Key="BookDetailThemeBgColor">#0e0d13</Color>
    <Color x:Key="BookDetailStickBgColor">#1b1b23</Color>
    <Color x:Key="BookDetailTextColor">#f7f8fd</Color>
    <Color x:Key="BookDetailExpandColor">#27262c</Color>
    <Color x:Key="BookDetaiPinkColor">#6e2d46</Color>
    <!--  Post comment  -->
    <Color x:Key="PostCommentThemeBgColor">#121116</Color>
    <Color x:Key="PostCommentStarBgColor">#1b1b25</Color>
    <Color x:Key="PostCommentContentBgColor">#333344</Color>
    <Color x:Key="PostCommentTextColor">White</Color>
    <!--  List chapter  -->
    <Color x:Key="TableContentThemeBgColor">#131218</Color>
    <Color x:Key="TableContentSearchBarBgColor">#262630</Color>
