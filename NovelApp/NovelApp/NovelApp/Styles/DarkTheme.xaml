    <x:Double x:Key="TextBigSize">30</x:Double>
    <x:Double x:Key="TextTagSize">20</x:Double>
    <x:Double x:Key="BookDetailTextIconSize">25</x:Double>
    <x:Double x:Key="TextNormalSize">15</x:Double>
    <x:Double x:Key="TextSmallSize">13</x:Double>
    <x:Double x:Key="BookDetailTextSmallerSize">15</x:Double>

