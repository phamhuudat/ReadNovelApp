<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage
    xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:animations="clr-namespace:NovelApp.Animations"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
    xmlns:tabView="clr-namespace:Syncfusion.XForms.TabView;assembly=Syncfusion.SfTabView.XForms"
    xmlns:forms="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
    CloseWhenBackgroundIsClicked="True"
    xmlns:sys="clr-namespace:System.Collections.Generic;assembly=netstandard"
    x:Class="NovelApp.Views.Popup.SettingsPopup">
    <pages:PopupPage.Animation>
        <animations:PopupAnimation />
    </pages:PopupPage.Animation>
    <Grid
        RowDefinitions="*,2*"
        >
        <Frame
            Grid.Row="1"
            CornerRadius="30"
            Margin="0,0,0,-30"
            BackgroundColor="#121116">
            <Grid
                RowDefinitions="20,*"
                ColumnDefinitions="*,80,*">
                <!--Goback popup-->
                <Frame
                    Grid.Column="1"
                    BackgroundColor="{StaticResource GrayColor}"
                    Padding="20,5,20,5"
                    CornerRadius="6"
                    Grid.Row="0">
                    <ffimageloading:SvgCachedImage
                        HeightRequest="15"
                        Source="resource://NovelApp.Resources.Svg.icon_arrow_down.svg" />
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding GoBackCommand}" />
                    </Frame.GestureRecognizers>
                </Frame>
                <!--View danh sách-->
                <tabView:SfTabView
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    TabHeight="60"
                    Grid.Row="1">
                    <tabView:SfTabView.SelectionIndicatorSettings>
                        <tabView:SelectionIndicatorSettings
                            Position="Bottom"
                            StrokeThickness="2"
                            Color="White" />
                    </tabView:SfTabView.SelectionIndicatorSettings>
                    <tabView:SfTabItem
                        Title="General"
                        SelectionColor="White"
                        TitleFontAttributes="Bold"
                        TitleFontColor="Gray"
                        TitleFontSize="25">
                        <tabView:SfTabItem.Content>
                            <Grid
                                RowSpacing="10"
                                ColumnSpacing="20"
                                ColumnDefinitions="20,*"
                                RowDefinitions="60,60,*">
                                <forms:CachedImage
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Source="resource://NovelApp.Resources.icons.ic_listchapter.png"
                                    />
                                <Label Text="List Chapter"
                                       Grid.Column="1"
                                       FontSize="20"
                                       VerticalOptions="Center"
                                       TextColor="{StaticResource WhiteColor}"
                                       Grid.Row="0"/>
                                <forms:CachedImage
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Source="resource://NovelApp.Resources.icons.ic_book.png" />
                                <Label
                                    Text="About the novel"
                                    Grid.Column="1"
                                    FontSize="20"
                                    VerticalOptions="Center"
                                    TextColor="{StaticResource WhiteColor}"
                                    Grid.Row="1" />
                            </Grid>
                        </tabView:SfTabItem.Content>
                    </tabView:SfTabItem>
                    <tabView:SfTabItem
                        Title="Display"
                        SelectionColor="White"
                        TitleFontAttributes="Bold"
                        TitleFontColor="Gray"
                        TitleFontSize="25">
                        <tabView:SfTabItem.Content>
                            <ScrollView>
                                <StackLayout>
                                    <!--Reading mode-->
                                    <Label Text="Reading mode"
                                           FontSize="20"
                                           Margin="0,20,0,0"
                                           TextColor="{StaticResource WhiteColor}"
                                           FontAttributes="Bold"/>
                                    <buttons:SfSegmentedControl
                                        VisibleSegmentsCount="3"
                                        SelectedIndex="2"
                                        BorderColor="#3F3F3F"
                                        FontColor="{StaticResource WhiteColor}"
                                        Color="Transparent"
                                        CornerRadius="25"
                                        SelectionTextColor="#6a8efe">
                                        <buttons:SfSegmentedControl.SelectionIndicatorSettings>
                                            <buttons:SelectionIndicatorSettings
                                                CornerRadius="25"
                                                Color="#1b1b25">
                                            </buttons:SelectionIndicatorSettings>
                                        </buttons:SfSegmentedControl.SelectionIndicatorSettings>
                                        <sys:List
                                            x:TypeArguments="x:String">
                                            <x:String>SCROLLING</x:String>
                                            <x:String>PAGING</x:String>
                                            <x:String>TAPPING</x:String>
                                        </sys:List>
                                    </buttons:SfSegmentedControl>
                                    <!--Brigtness-->
                                    <Label
                                        Text="Brightness"
                                        FontSize="20"
                                        Margin="0,20,0,0"
                                        TextColor="{StaticResource WhiteColor}"
                                        FontAttributes="Bold" />
                                    <!--Color-->
                                    <Label
                                        Text="Color"
                                        FontSize="20"
                                        Margin="0,20,0,0"
                                        TextColor="{StaticResource WhiteColor}"
                                        FontAttributes="Bold" />
                                    <!--Text size-->
                                    <Label
                                        Text="Text size"
                                        FontSize="20"
                                        Margin="0,20,0,0"
                                        TextColor="{StaticResource WhiteColor}"
                                        FontAttributes="Bold" />
                                    <!--Reading fonts-->
                                    <Label
                                        Text="Reading fonts"
                                        FontSize="20"
                                        Margin="0,20,0,0"
                                        TextColor="{StaticResource WhiteColor}"
                                        FontAttributes="Bold" />
                                </StackLayout>
                            </ScrollView>
                        </tabView:SfTabItem.Content>
                    </tabView:SfTabItem>
                </tabView:SfTabView>
            </Grid>
        </Frame>
    </Grid>
</pages:PopupPage>