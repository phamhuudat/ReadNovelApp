<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="NovelApp.Views.BookSelf.RecentReadingView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sfListView="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms">
    <ContentView.Content>
        <sfListView:SfListView
            x:Name="listView"
            Margin="20,20,0,0"
            ItemSize="85"
            ItemSpacing="0,0,0,20"
            ItemTemplate="{DynamicResource BookView}"
            ItemsSource="{Binding BookSelfVM.RecentList}"
            SelectionBackgroundColor="Transparent"
            SelectionChangedCommand="{Binding ItemTappedCommand}"
            SelectionChangedCommandParameter="{x:Reference listView}" />
    </ContentView.Content>
</ContentView>
